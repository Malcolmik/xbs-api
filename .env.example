# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/xbs_dev
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration (optional for now)
REDIS_URL=redis://localhost:6379

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/xbs.log

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this
ENCRYPTION_KEY=your-super-secret-encryption-key-change-this
API_KEY_SALT_ROUNDS=10

# Payment Providers (will be configured per application)
# XOROPAY_API_KEY=your-xoropay-key
# STRIPE_API_KEY=your-stripe-key

# External Services
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key
EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4/latest

# Monitoring (optional)
# SENTRY_DSN=your-sentry-dsn

# CORS Configuration
CORS_ORIGIN=http://localhost:3001,https://app.xbs.io
CORS_CREDENTIALS=true
